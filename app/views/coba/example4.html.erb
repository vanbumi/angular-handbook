<h1>Example how to show Ng-Ajax properties</h1>

<div ng-app="myApp" ng-controller="myCtrl" >
  <h2>Show content remote server</h2>
  <p>
    <b>Content</b>: {{ contentIs }}
  </p>
  <p>
    <b>Status</b>: {{ statuscode }}
  </p>
  <p>
    <b>Status Text</b>: {{ statustext }}
  </p>
</div>

<script charset="utf-8">
  app = angular.module("myApp", []);
  app.controller("myCtrl", function($scope, $http) {
    $http({
      method: 'GET',
      url: '/students.json'
    }).then(function success(response){
        $scope.contentIs = response.data;
        $scope.statuscode = response.status;
        $scope.statustext = response.statusText;
    }, function error(response){
      $scope.contentIs = "Can not get data!!";
    });
  });
</script>
